{
  "manifest_version": 3,
  "name": "Octheia - Visual Accessibility Helper",
  "version": "1.0.0",
  "description": "Help visually impaired users by resizing text, changing background colors, and adjusting contrast",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js", "hover-zoom.js", "focus-mode.js", "alt-text-generator.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
